<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finalbgd"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/HelloLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_night"
            android:onClick="onClick"
            android:shadowColor="#000000"
            android:text="@string/button2"
            android:textColor="@color/colorTextDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.055"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.092" />

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="@string/hello"
            android:textColor="@color/colorTextDark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.089" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/StatAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/StatLayout"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/currentCityV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="30dp"
                android:shadowColor="#000000"
                android:text="@string/City"
                android:textColor="@color/colorTextDark"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textType"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/textCloudy"
                android:textColor="@color/colorTextDark"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.397" />
        </LinearLayout>

        <ImageView
            android:id="@+id/AnimView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/icon"
            app:srcCompat="@drawable/cloudyn" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/CurrentTemp"
        android:layout_width="87dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Plus"
            android:textColor="@color/colorTextDark"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textWeather"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/weather"
            android:textColor="@color/colorTextDark"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/TimeDay"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/HoursTemp"
            android:layout_width="319dp"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PPressure"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/PastWT"
                android:textColor="@color/colorTextDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PresentWind"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/PresentWT"
                android:textColor="@color/colorTextDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PHumidity"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/FutureWT"
                android:textColor="@color/colorTextDark"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/HoursTemp2"
            android:layout_width="319dp"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PressureStat"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/PastTemp"
                android:textColor="@color/colorTextDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/WindSpeed"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/PresentTemp"
                android:textColor="@color/colorTextDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/HumidityStat"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/FutureTemp"
                android:textColor="@color/colorTextDark"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/DaysFragment"
        android:layout_width="340dp"
        android:layout_height="236dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/colorFragmentDark"
        android:clickable="false">

    </FrameLayout>

</LinearLayout>