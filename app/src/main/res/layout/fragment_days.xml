<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaysFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/DaysLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="40dp">

        <TextView
            android:id="@+id/DayOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Monday"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="@string/Monday" />

        <TextView
            android:id="@+id/DayTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Tuesday"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DayThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Wednesday"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DayFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Thursday"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DayFive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Friday"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DaySix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Saturday"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DaySeven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Sunday"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TempLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="40dp">

        <TextView
            android:id="@+id/DayOneTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/DefaultTemp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DayTwoTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/DefaultTemp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DayThreeTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/DefaultTemp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DayFourthTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/DefaultTemp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DayFiveTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/DefaultTemp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DaySixTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/DefaultTemp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DaySevenTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/DefaultTemp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/PicLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_on" />
    </LinearLayout>

</LinearLayout>